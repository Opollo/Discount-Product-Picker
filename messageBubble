
import React, { useState, useRef, useEffect } from 'react';
import { Message } from '../types';
import { PaperclipIcon, ThumbUpIcon, ThumbDownIcon } from './icons';

interface MessageBubbleProps {
  message: Message;
  onFeedback: (messageId: string, feedback: 'up' | 'down') => void;
  onFeedbackText: (messageId: string, text: string) => void;
}

const formatText = (text: string) => {
    // Basic markdown for bold text.
    const boldedText = text.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
    // Replace newlines with <br> tags
    const withLineBreaks = boldedText.replace(/\n/g, '<br />');
    return { __html: withLineBreaks };
};

const MessageBubble: React.FC<MessageBubbleProps> = ({ message, onFeedback, onFeedbackText }) => {
  const isUser = message.sender === 'user';
  const [isFeedbackFormVisible, setIsFeedbackFormVisible] = useState(false);
  const [feedbackText, setFeedbackText] = useState(message.feedbackText || '');
  const feedbackInputRef = useRef<HTMLTextAreaElement>(null);

  useEffect(() => {
    if (isFeedbackFormVisible) {
      feedbackInputRef.current?.focus();
    }
  }, [isFeedbackFormVisible]);

  useEffect(() => {
    setFeedbackText(message.feedbackText || '');
  }, [message.feedbackText]);

  const handleFeedbackClick = (feedback: 'up' | 'down') => {
    if (message.feedback === feedback) {
      setIsFeedbackFormVisible(!isFeedbackFormVisible);
    } else {
      setIsFeedbackFormVisible(true);
    }
    onFeedback(message.id, feedback);
  };

  const handleFeedbackSubmit = (e: React.FormEvent) => {
    e.preventDefault();
    if (!feedbackText.trim()) return;
    onFeedbackText(message.id, feedbackText);
    setIsFeedbackFormVisible(false);
  };

  return (
    <div className={`flex items-end ${isUser ? 'justify-end' : 'justify-start'} mb-4`}>
      <div className={`max-w-xl lg:max-w-2xl px-4 py-3 rounded-xl shadow-md ${isUser ? 'bg-blue-600 text-white rounded-br-none' : 'bg-white text-gray-800 rounded-bl-none'}`}>
        <div dangerouslySetInnerHTML={formatText(message.text)} className="prose prose-sm max-w-none" />
        {message.file && (
          <div className="mt-2 p-2 bg-gray-100/50 rounded-lg border border-gray-300/50 text-sm">
            <div className="flex items-center gap-2">
              <PaperclipIcon className="h-4 w-4 flex-shrink-0" />
              <span className="font-medium truncate">{message.file.name}</span>
            </div>
          </div>
        )}
      </div>
      {!isUser && (
        <div className="ml-2 self-center">
            <div className="flex flex-col items-center gap-2">
                <div className="flex items-center space-x-1">
                    <button 
                        onClick={() => handleFeedbackClick('up')}
                        className={`p-1 rounded-full transition-colors ${message.feedback === 'up' ? 'text-blue-600 bg-blue-100' : 'text-gray-400 hover:text-blue-600 hover:bg-gray-100'}`}
                        aria-label="Good response"
                    >
                        <ThumbUpIcon className="h-5 w-5" />
                    </button>
                    <button 
                        onClick={() => handleFeedbackClick('down')}
                        className={`p-1 rounded-full transition-colors ${message.feedback === 'down' ? 'text-red-500 bg-red-100' : 'text-gray-400 hover:text-red-500 hover:bg-gray-100'}`}
                        aria-label="Bad response"
                    >
                        <ThumbDownIcon className="h-5 w-5" />
                    </button>
                </div>
                {isFeedbackFormVisible && message.feedback && (
                    <form onSubmit={handleFeedbackSubmit} className="w-56 bg-white p-2.5 rounded-lg shadow-lg border border-gray-200 animate-fade-in-up z-10">
                        <label htmlFor={`feedback-text-${message.id}`} className="text-xs text-gray-600 mb-1 font-medium block">Provide additional feedback (optional)</label>
                        <textarea
                            id={`feedback-text-${message.id}`}
                            ref={feedbackInputRef}
                            value={feedbackText}
                            onChange={(e) => setFeedbackText(e.target.value)}
                            placeholder="What did you like or dislike?"
                            className="w-full p-1.5 border border-gray-300 rounded-md text-sm text-gray-800 focus:ring-1 focus:ring-blue-500 focus:border-blue-500 transition"
                            rows={3}
                        />
                        <div className="flex justify-end mt-1.5">
                            <button type="submit" className="px-3 py-1 bg-blue-600 text-white text-xs font-semibold rounded-md hover:bg-blue-700 disabled:opacity-50 transition-colors" disabled={!feedbackText.trim()}>
                                Submit
                            </button>
                        </div>
                    </form>
                )}
            </div>
        </div>
      )}
    </div>
  );
};

export default MessageBubble;
